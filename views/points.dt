extends base.dt

block title
	title #{name} - Watchtime

block content
	h1 Leaderboards for #{name}
	table.leaderboard
		thead
			tr
				th
				th User
				th Points
				th Watchtime
		tbody
			- uint place = 0;
			- foreach (user; users)
				tr
					td.right #{++place}#{place == 1 ? "st" : place == 2 ? "nd" : place == 3 ? "rd" : "th"}
					td= user.username
					td= user.points
					td= formatWatchTime(user.watchTime)